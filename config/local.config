process {
    executor = 'local'           // The type of system the processes are being run on (do not modify this)
    maxForks = 6                 // The maximum number of forks a single process is allowed to spawn

  withLabel: xlarge {
    executor      = 'slurm'
    queue         = 'your_slurm_partition'        // <-- set if needed
    clusterOptions = '--ntasks=1 --nodes=1'       // <-- any SBATCH extras

    cpus          = 20
    errorStrategy = { task.exitStatus in 137..140 ? 'retry' : 'terminate' }
    maxRetries    = 1
    memory        = { 256.GB * (task.attempt > 1 ? 1.5 : 1) }
    time          = { 1.5.h  * (task.attempt > 1 ? 1.5 : 1) } // note the dot before h
  }
}
